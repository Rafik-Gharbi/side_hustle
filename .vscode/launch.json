  "version": "0.2.0",
  "configurations": [
    {
      "name": "side_hustle",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/lib/main.dart",
      "type": "dart"
    },
    {
      "name": "side_hustle (profile mode)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/frontend/lib/main.dart",
      "flutterMode": "profile"
    },
    {
      "name": "side_hustle (release mode)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/frontend/lib/main.dart",
      "flutterMode": "release"
    },
    {
      "name": "backend",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start", "debug"]
    }
  ]
}
